<div class="container">
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Scrapinator</a>
        <a href="/" class="navbar-brand">Home</a>
        <a href="/articles/saved" class="navbar-brand">Saved Articles</a>
        <button id="scrape">Scrape New Articles</button>
        <button id="clear-articles">Clear Articles</button>
    </nav>

    <div class="jumbotron jumbotron-fluid">
        <h1>Mongo Scraper</h1>
        <h3>GI Edition</h3>
    </div>
    <br>
    {{#each articles}}
        {{#unless saved}}
            <div class="card" id="results">
                <div class="card-header">
                    <h6><a class="article-link" target="_blank" rel="noopener noreferrer" href="{{this.link}}">{{this.title}}</a>
                        <a class="btn" data-id="{{this._id}}">Save Article</a></h6>
                </div>
            </div>
        {{/unless}}
    {{/each}}
</div>